{
  "manifest_version": 3,
  "name": "FNAF Cam Extension",
  "version": "1.0",
  "description": "FNAF-style cam UI with tab switching",
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cam-button.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
